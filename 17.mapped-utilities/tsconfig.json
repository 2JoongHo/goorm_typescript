{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build/js",
        "noEmitOnError": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "isolatedModules": true,
        "removeComments": true,
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "include": [
        "src/**/*.ts",
    ]
}